<h1 class="text-center">Show Page</h1>
<%= link_to "Edit task", edit_path(@task), class: "btn btn-primary", :id => "bouton" %>
<h2 class="text-center">Task</h2>
<p class="text-center"><%= @task.details %></p>
<% if @task.completed == false %>
<p class="text-center"><i class="far fa-square"></i> Task is not completed yet</p>
<% else %>
<p class="text-center"><i class="far fa-check-square"></i> Task is completed, well done sir.</p>
<% end %>
<%= link_to "Back to list", tasks_path, class: "btn btn-primary", :id => "bouton_2"  %>
